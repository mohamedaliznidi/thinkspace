# =============================================================================
# THINKSPACE ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# Neon PostgreSQL Database (with pgvector extension)
DATABASE_URL="postgresql://username:password@hostname/thinkspace_db?sslmode=require"

# Neo4j Graph Database
NEO4J_URI="neo4j+s://your-neo4j-instance.databases.neo4j.io"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="your-neo4j-password"

# Redis (optional - for caching and session storage)
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-make-it-long-and-random-32-chars-min"

# Session Management
SESSION_SECRET="your-session-secret-key-here-make-it-long-and-random-64-chars-recommended"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-for-token-signing-make-it-secure"

# -----------------------------------------------------------------------------
# AI SERVICES CONFIGURATION
# -----------------------------------------------------------------------------

# OpenRouter API Configuration
OPENROUTER_API_KEY="your-openrouter-api-key"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"

# Default AI Model Settings
DEFAULT_CHAT_MODEL="anthropic/claude-3.5-sonnet"
DEFAULT_EMBEDDING_MODEL="text-embedding-3-small"

# AI Service Fallbacks (optional)
OPENAI_API_KEY="your-openai-api-key-optional-fallback"
ANTHROPIC_API_KEY="your-anthropic-api-key-optional-fallback"

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Environment
NODE_ENV="development"

# -----------------------------------------------------------------------------
# MANTINE UI CONFIGURATION
# -----------------------------------------------------------------------------

# Theme Configuration
MANTINE_THEME="light"
MANTINE_COLOR_SCHEME="auto"
NEXT_PUBLIC_MANTINE_COLOR_SCHEME_MANAGER_KEY="thinkspace-color-scheme"

# -----------------------------------------------------------------------------
# FILE MANAGEMENT CONFIGURATION
# -----------------------------------------------------------------------------

# File Upload Settings
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="pdf,doc,docx,txt,md,jpg,jpeg,png,gif,webp,mp4,mp3,wav"

# Content Processing
ENABLE_FILE_PROCESSING="true"
ENABLE_OCR="false"
ENABLE_AUDIO_TRANSCRIPTION="false"

# -----------------------------------------------------------------------------
# VECTOR SEARCH CONFIGURATION
# -----------------------------------------------------------------------------

# Embedding Configuration
EMBEDDING_DIMENSIONS="1536"
VECTOR_SIMILARITY_THRESHOLD="0.7"
MAX_SEARCH_RESULTS="20"

# -----------------------------------------------------------------------------
# GRAPH DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# Neo4j Performance Settings
NEO4J_MAX_CONNECTION_POOLSIZE="50"
NEO4J_CONNECTION_TIMEOUT="30000"
NEO4J_MAX_TRANSACTION_RETRY_TIME="30000"

# Graph Analytics
ENABLE_GRAPH_ANALYTICS="true"
GRAPH_CACHE_TTL="3600"

# -----------------------------------------------------------------------------
# DEVELOPMENT & DEBUGGING
# -----------------------------------------------------------------------------

# Logging
LOG_LEVEL="info"
ENABLE_QUERY_LOGGING="false"
ENABLE_PERFORMANCE_MONITORING="false"

# Development Features
ENABLE_STORYBOOK="true"
ENABLE_PRISMA_STUDIO="true"
ENABLE_NEO4J_BROWSER="true"

# -----------------------------------------------------------------------------
# OPTIONAL SERVICES
# -----------------------------------------------------------------------------

# Email Service (for notifications)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@example.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@thinkspace.com"

# Webhook Configuration (for integrations)
WEBHOOK_SECRET="your-webhook-secret-for-external-integrations"

# Analytics (optional)
ENABLE_ANALYTICS="false"
ANALYTICS_API_KEY="your-analytics-api-key"

# -----------------------------------------------------------------------------
# PRODUCTION OVERRIDES
# -----------------------------------------------------------------------------

# Production Database URLs (override in production)
# DATABASE_URL="postgresql://prod-user:prod-pass@prod-host/thinkspace_prod?sslmode=require"
# NEO4J_URI="neo4j+s://prod-neo4j-instance.databases.neo4j.io"
# REDIS_URL="redis://prod-redis-host:6379"

# Production Security
# NEXTAUTH_URL="https://your-domain.com"
# NEXT_PUBLIC_APP_URL="https://your-domain.com"
